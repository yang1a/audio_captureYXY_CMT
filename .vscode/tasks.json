{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build STM32 (CMake Debug)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/STM/project/build/Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}/STM/project"
            },
            "problemMatcher": []
        },
        {
            "label": "Flash STM32 (DAPLink + OpenOCD)",
            "type": "shell",
            "command": "C:/msys64/ucrt64/bin/openocd.exe",
            "args": [
                "-s",
                "C:/msys64/ucrt64/share/openocd/scripts",
                "-f",
                "interface/cmsis-dap.cfg",
                "-f",
                "target/stm32h7x.cfg",
                "-c",
                "adapter speed 1000",
                "-c",
                "program {${workspaceFolder}/STM/project/build/Debug/project.elf} verify reset exit"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Build + Flash (One Click)",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build STM32 (CMake Debug)",
                "Flash STM32 (DAPLink + OpenOCD)"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}